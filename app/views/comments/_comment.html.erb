
<p>
    <%= image_tag comment.author.photo.variant(resize_to_limit: [100, 100]) %>
    <%= link_to comment.author.fullname, user_path(@opinion.author) %>
    <small><b><%= display_username(@opinion.author) %></b></small>
    posted <%= distance_of_time_in_words(DateTime.now, comment.created_at)%> ago
 </p>

<p><%= comment.content %></p>
<%= edit_comment_button(@opinion, comment) %>
<%= delete_comment_button(@opinion, comment) %>