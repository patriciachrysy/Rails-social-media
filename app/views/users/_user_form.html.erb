<%= form_with(model: @user, local: true) do |f|%>
    <div class="row field form-group">
        <%= f.label :fullname, class: "dark-grey" %>
        <%= f.text_field :fullname, class: "form-control" %>
    </div>

    <div class="row field form-group">
        <%= f.label :username, class: "dark-grey" %>
        <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="row field form-group">
        <%= f.label :photo, class: "dark-grey" %>
        <%= f.file_field :photo, class: "form-control", direct_upload: true %>
    </div>

    <div class="row field form-group">
        <%= f.label :cover_image, class: "dark-grey" %>
        <%= f.file_field :cover_image, class: "form-control", direct_upload: true %>
    </div>

    <div class="row field form-group">
        <%= f.submit 'Done', class: "btn bg-blue text-white" %>
    </div>
<% end %>